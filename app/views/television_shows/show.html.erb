<h3><%= @television_show.title %></h3>

<ul>
  <li>Network: <%= @television_show.network %></li>
  <li>Years: <%= @television_show.years %></li>
</ul>

<div>
  <%= @television_show.synopsis %>
</div>

<h4>Cast</h4>

<ul>
  <% @television_show.characters.each do |character| %>

    <li><%= character.actor %> - <%= character.role %> -- <%= character.description %> <%= link_to "Delete", character_path(character), method: :delete %></li>
  <% end %>
</ul>

<h5>Add a Character</h5>

<%= form_for @character do |f| %>

  <% if @character.errors.any? %>
    <ul>
      <% @character.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>

  <% end %>

  <div>
    <%= f.label :role %>
    <%= f.text_field :role %>
  </div>

  <div>
    <%= f.label :actor %>
    <%= f.text_field :actor %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.hidden_field :television_show_id, value: "#{@television_show.id}"%>
  </div>

  <%= f.submit 'Submit' %>

<% end %>


